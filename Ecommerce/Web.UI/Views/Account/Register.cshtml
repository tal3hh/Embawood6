@model UserCreateDto


<section class="reg_section">
      <div class="reg_container">
        <h1>Qeydiyyatdan keçin</h1>
          

        <div class="reg_bottom">
           <div asp-validation-summary="All" style="color: red">

           </div>
           <form asp-action="Register" asp-controller="Account" method="post">

             <input asp-for="Username" placeholder="Istifadeci adi" type="text" />
             <input asp-for="Email" placeholder="E-mail" type="email" />
             <input asp-for="Password" placeholder="Şifrə" type="password" />
             <input asp-for="ConfrimPassword" placeholder="Şifrə(təkrar)" type="password" />

             <button type="submit">Qeydiyyatdan keç</button>
            </form>
          
          <p>Hesabınız var? <a asp-action="Login" asp-controller="Account">Daxil olun</a></p>
        </div>
      </div>
</section>