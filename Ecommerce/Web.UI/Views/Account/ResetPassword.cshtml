@model ResetPasswordDto


<section class="login_section">
      <div class="login_container">
        <h1>Yeni Şifrəni Daxil Edin</h1>
        <div class="login_bottom">

            <div asp-validation-summary="All" style="color: red">

            </div>

            <form asp-action="ResetPassword" asp-controller="Account" method="post">
                
                <input asp-for="Email" placeholder="Email" type="email" />
                <input asp-for="Password" placeholder="Şifrə" type="password" />
                <input asp-for="ConfrimPassword" placeholder="Tekrar Şifrə" type="password" />

                <input asp-for="Token"  type="hidden" />
                <button type="submit">Deyis</button>
            </form>
         
        </div>
      </div>
    </section>