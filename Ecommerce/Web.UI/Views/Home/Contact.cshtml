@model ContactCreateDto



<section class="contact_us_section">
      <div class="contact_us_container">
        <div class="contact_us_top_and_map">
        <div class="contact_us_top">
          <div class="contact_us_row">
            <h1>Embawood mebel</h1>
            <p>
              <span>Baş ofisin ünvanı:</span> Azərbaycan, Bakı, AZ 1065, B.
              Bağırova küç. 15B
            </p>
            <p><span>Telefon:</span> 012 564 73 04</p>
            <p><span>E-mail:</span> office@embawood.az</p>
          </div>
          <div class="contact_us_row">
            <h1>İş saatları</h1>
            <p><span>Həftə içi günlər:</span> 09:00-18:00</p>
            <p>
              Mağazalarımızın ünvanlarını burada <a href="#">görə</a> bilərsiniz
            </p>
          </div>
          <div class="contact_us_row">
            <h1>Bizi izləyin</h1>
            <div>
              <i class="fa-brands fa-youtube"></i>
              <i class="fa-brands fa-facebook"></i>
              <i class="fa-brands fa-instagram"></i>
              <i class="fa-brands fa-twitter"></i>
              <i class="fa-brands fa-telegram"></i>
            </div>
          </div>
        </div>
        <div class="contact_us_map">
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3039.0710197776575!2d49.82270817559126!3d40.38511855756337!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d9bc628895f%3A0x8023411510df62c9!2sEmbawood%20Ba%C5%9F%20ofis!5e0!3m2!1sru!2saz!4v1693159371775!5m2!1sru!2saz" width="600" height="350" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade">
          </iframe>

        </div>
      </div>
        <div class="contact_us_bottom">
          <h1>Təkliflər və şikayətlər</h1>
          <form asp-action="Contact" asp-controller="Home" method="post">
              <div class="inputs">
            <input asp-for="Fullname" placeholder="Ad və Soyadınız" type="text" />
            <input asp-for="Email" placeholder="E-mail" type="email" />
            <input asp-for="Phone" placeholder="Telefon" type="text" />
            <select>
              <option value="none">Müraciət mövzusu</option>
              <option value="thank">Təşəkkür</option>
              <option value="agreement">Razılıq</option>
              <option value="none">İrad</option>
              <option value="about_product">Məhsul haqqında</option>
            </select>
          </div>
          <textarea asp-for="Message" cols="30" rows="10"></textarea>
          <button>Göndər</button>
          </form>
        </div>
      </div>
    </section>