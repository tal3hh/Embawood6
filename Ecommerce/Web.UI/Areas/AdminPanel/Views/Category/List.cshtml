@model List<CategoryDto>

@{
    var count = 1;
}



<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4>Kateqoriyalar</h4>
                
                   <div class="create-btn" style="display:flex; justify-content:flex-end;">
                    <a asp-action="Create" asp-area="AdminPanel" asp-controller="Category" class="btn btn-facebook">Create</a>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>
                                    Kategoriya
                                </th>
                                <th>
                                    Mehsul Sayi
                                </th>
                                <th>
                                    Yaranma Tarixi
                                </th>
                                <th>
                                    EDIT
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dto in Model)
                            {
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @dto.Name
                    </td>
                     <td>
                        @dto.ProductCount ed.
                    </td>
                    <td>
                        @dto.CreateDate.ToString("MMM dd")
                    </td>
                    <td>
                        <a asp-action="Update" asp-controller="Category" asp-area="AdminPanel" asp-route-id="@dto.Id"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="Delete" asp-controller="Category" asp-area="AdminPanel" asp-route-id="@dto.Id"><i class="bi bi-x-square"></i></a>
                    </td>
                </tr>count++;
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
