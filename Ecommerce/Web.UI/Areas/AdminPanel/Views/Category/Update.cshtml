@model (CategoryUpdateDto Categorydto, List<CategoryDto> Categorylist)

@{ int count = 1; }

<div class="row">
    <div class="col-md-5 grid-margin stretch-card">
        <div class="card">
            <div class="card-body d-flex flex-column">
                <h4 class="card-title">Kateqoriya Yenilemek</h4>
                <form asp-action="Update" asp-controller="Category" asp-area="AdminPanel" class="forms-sample" method="post">
                    <div class="form-group row">
                        <input type="hidden" asp-for="@Model.Categorydto.Id"/>
                        <label asp-for="@Model.Categorydto.Name" class="col-sm-3 col-form-label">Kateqoriya</label>
                        <div class="col-sm-9">
                            <input asp-for="@Model.Categorydto.Name" class="form-control" id="exampleInputEmail2" placeholder="Kateqoriya yazin...">
                            <span asp-validation-for="@Model.Categorydto.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mr-2">Submit</button>
                    <a asp-action="List" asp-controller="Category" asp-area="AdminPanel" class="btn btn-light">Cancel</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-7 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kateqoriyalar</h4>
                <div class="mt-auto">
                    <div class="table-responsive">
                            <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kateg.</th>
                                    <th>Mehs. Say</th>
                                    <th>Tarix</th>
                                    <th>Edit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var CategoryDto in Model.Categorylist)
                                {
                    <tr>
                        <td>@count</td>
                        <td>@CategoryDto.Name</td>
                        <td>@CategoryDto.CreateDate.ToString("MMM dd")</td>
                        <td>
                            <a asp-action="Update" asp-controller="Category" asp-area="AdminPanel" asp-route-id="@CategoryDto.Id"><i class="bi bi-pencil-square"></i></a>
                            <a asp-action="Delete" asp-controller="Category" asp-area="AdminPanel" asp-route-id="@CategoryDto.Id"><i class="bi bi-x-square"></i></a>
                        </td>
                    </tr>count++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>